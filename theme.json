{
	"$schema": "https://schemas.wp.org/wp/6.5/theme.json",
	"version": 2,
	"settings": {
		"appearanceTools": true,

		"color": {
		"defaultPalette": false,
		"palette": [
			{
			"name": "Primary",
			"slug": "primary",
			"color": "#0f172a"
			},
			{
			"name": "Accent",
			"slug": "accent",
			"color": "#22c55e"
			},
			{
			"name": "Light",
			"slug": "light",
			"color": "#f8fafc"
			},
			{
			"name": "Dark Gray",
			"slug": "dark-gray",
			"color": "#1f2937"
			}
		]
		},

		"layout": {
		"contentSize": "800px",
		"wideSize": "1200px"
		},

		"spacing": {
		"units": ["px", "rem", "%", "vw", "vh"]
		},

		"typography": {
		"fluid": true,
		"fontFamilies": [
			{
			"fontFamily": "Arial, sans-serif",
			"name": "Primary Font",
			"slug": "primary"
			}
		],
		"fontSizes": [
			{
			"name": "Small",
			"slug": "small",
			"size": "0.9rem"
			},
			{
			"name": "Medium",
			"slug": "medium",
			"size": "1.1rem"
			},
			{
			"name": "Large",
			"slug": "large",
			"size": "1.8rem"
			},
			{
			"name": "Extra Large",
			"slug": "x-large",
			"size": "2.5rem"
			}
		]
		}
	},

	"styles": {
		"color": {
		"background": "var(--wp--preset--color--light)",
		"text": "var(--wp--preset--color--primary)"
		},

		"typography": {
		"fontFamily": "var(--wp--preset--font-family--primary)",
		"fontSize": "var(--wp--preset--font-size--medium)",
		"lineHeight": "1.6"
		},

		"elements": {
		"heading": {
			"color": {
			"text": "var(--wp--preset--color--primary)"
			}
		},
		"link": {
			"color": {
			"text": "var(--wp--preset--color--accent)"
			},
			":hover": {
			"color": {
				"text": "var(--wp--preset--color--primary)"
			}
			}
		},
		"button": {
			"color": {
			"background": "var(--wp--preset--color--primary)",
			"text": "#ffffff"
			},
			"border": {
			"radius": "6px"
			},
			"spacing": {
			"padding": {
				"top": "0.6rem",
				"bottom": "0.6rem",
				"left": "1rem",
				"right": "1rem"
			}
			}
		}
		},

		"blocks": {
		"core/paragraph": {
			"typography": {
			"lineHeight": "1.7"
			}
		},
		"core/heading": {
			"typography": {
			"fontWeight": "600"
			}
		},
		"core/quote": {
			"border": {
			"left": "4px solid var(--wp--preset--color--accent)"
			},
			"spacing": {
			"padding": {
				"left": "1rem"
			}
			}
		},
		"core/code": {
			"color": {
			"background": "#f3f4f6"
			},
			"spacing": {
			"padding": {
				"top": "0.5rem",
				"bottom": "0.5rem",
				"left": "0.5rem",
				"right": "0.5rem"
			}
			}
		}
		}
	},

	"templateParts": [
		{
		"area": "header",
		"name": "header",
		"title": "Header"
		},
		{
		"area": "footer",
		"name": "footer",
		"title": "Footer"
		}
	]
}